! fix terminal login for ruby
URxvt*loginShell:  true

*background: #1d2021
! soft *background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintstyle
Xft.lcdfilter: lcdfilter

Rxvt*intensityStyles: false
! hide the scroll bar
URxvt*scrollBar: false

! Fonts
!URxvt.font:     xft:bitstream vera sans mono:size=12:antialias=true
!URxvt.font: -*-terminus-medium-*-*-*-*-140-*-*-*-*-iso8859-1
!URxvt.font:     xft:Terminus:size=16:antialias=true
!URxvt.boldFont: xft:bitstream vera sans mono:bold:size=12:antialias=true
URxvt.font: xft:DejavuSansMono:pixelsize=18:antialias=true

! Disable picture insert mode when ctrl+-/_ is pressed
URxvt.iso14755: false
URxvt.iso14755_52: false

! Add on-the-fly font resize
urxvt.perl-ext-common: default,resize-font

URxvt.keysym.C-minus: resize-font:smaller
URxvt.keysym.C-underscore: resize-font:smaller
URxvt.keysym.C-plus: resize-font:bigger
URxvt.keysym.C-equal: resize-font:bigger
URxvt.keysym.C-0: resize-font:reset
